{
  "manifest_version": 3,
  "name": "ATS Tailor - CV & Job Application Assistant",
  "version": "2.1.0",
  "description": "Automatically tailor your CV for ATS systems and apply to jobs in bulk with AI-powered optimization",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting",
    "offscreen"
  ],
  
  "optional_permissions": [
    "clipboardWrite",
    "downloads"
  ],
  
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://*.greenhouse.io/*",
    "https://*.myworkdayjobs.com/*",
    "https://workday.com/*",
    "https://*.workday.com/*",
    "https://*.smartrecruiters.com/*",
    "https://smartrecruiters.com/*",
    "https://*.icims.com/*",
    "https://icims.com/*",
    "https://*.workable.com/*",
    "https://workable.com/*",
    "https://*.teamtailor.com/*",
    "https://teamtailor.com/*",
    "https://*.bullhorn.com/*",
    "https://bullhorn.com/*",
    "https://*.oracle.com/*",
    "https://oracle.com/*",
    "https://*.taleo.net/*",
    "https://taleo.net/*",
    "https://linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://indeed.com/*",
    "https://*.indeed.com/*",
    "https://glassdoor.com/*",
    "https://*.glassdoor.com/*",
    "https://angel.co/*",
    "https://*.angel.co/*",
    "https://*.supabase.co/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://boards.greenhouse.io/*",
        "https://*.greenhouse.io/*",
        "https://*.myworkdayjobs.com/*",
        "https://workday.com/*",
        "https://*.workday.com/*",
        "https://*.smartrecruiters.com/*",
        "https://smartrecruiters.com/*",
        "https://*.icims.com/*",
        "https://icims.com/*",
        "https://*.workable.com/*",
        "https://workable.com/*",
        "https://*.teamtailor.com/*",
        "https://teamtailor.com/*",
        "https://*.bullhorn.com/*",
        "https://bullhorn.com/*",
        "https://*.oracle.com/*",
        "https://oracle.com/*",
        "https://*.taleo.net/*",
        "https://taleo.net/*",
        "https://linkedin.com/*",
        "https://*.linkedin.com/*",
        "https://indeed.com/*",
        "https://*.indeed.com/*",
        "https://glassdoor.com/*",
        "https://*.glassdoor.com/*"
      ],
      "js": [
        "content.js",
        "enhanced-cv-parser.js",
        "cv-formatter-perfect-enhanced.js",
        "file-attacher-turbo.js",
        "turbo-pipeline.js",
        "reliable-extractor.js",
        "validation-engine.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "ATS Tailor",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "*.css",
        "welcome.html",
        "bulk-apply.html",
        "cv-preview-enhanced.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com https://api.kimi.com https://*.supabase.co"
  }
}
