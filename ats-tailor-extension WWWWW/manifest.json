        "content.js",
        "enhanced-cv-parser.js",
        "cv-formatter-perfect-enhanced.js",
        "file-attacher-turbo.js",
        "turbo-pipeline.js",
        "reliable-extractor.js",
        "validation-engine.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "ATS Tailor",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "styles/*",
        "templates/*",
        "welcome.html",
        "bulk-apply.html",
        "cv-preview-enhanced.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://localhost/*",
      "https://127.0.0.1/*"
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com https://api.kimi.com https://*.supabase.co https://*.firebaseio.com"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting",
    "offscreen"
  ],

  "optional_permissions": [
    "clipboardWrite",
    "downloads"
  ],

  "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA1234567890abcdef..."
